#!/bin/sh
# postinst script for client
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

PATHEASYRSADEF="/usr/share/easy-rsa"
PATHEASYRSAUSR="/opt/easy-rsa"
PATHEASYRSACA="${PATHEASYRSAUSR}/pki/ca.crt"
PATHEASYRSAVARS="${PATHEASYRSAUSR}/vars"
PATHUSRSCRIPTS="/urs/bin"

case "$1" in
    configure)

        # create symlink in user folder
        if [ -d $PATHEASYRSAUSR ]; then
            if [ -d $PATHEASYRSADEF ]; then
                ln -s /usr/share/easy-rsa/* ${PATHEASYRSAUSR}
                read -p "Enter your user login: " LOGIN
                if [ ! -z $LOGIN ]; then
                    chown -R $LOGIN:$LOGIN ${PATHEASYRSAUSR}
                else
                    echo -e "\033[33m WARNING: user login not specified, failed to change owner and group for ${PATHEASYRSAUSR}, there may be access problems! \033[0m"
                fi
            else
                echo -e "\033[31m Error: not exist folder ${PATHEASYRSADEF}, break install! \033[0m"
                exit 1
            fi
        else
            echo -e "\033[31m Error: not exist folder ${PATHEASYRSAUSR}, break install! \033[0m"
            exit 1
        fi

        # configure file vars
        if [ -f $PATHEASYRSAVARS ]; then
            read "Enter your email: " EMAIL
            if [ ! -z $EMAIL ]; then
                sed -i "s|EXPHOSTNAME|$EMAIL|g" $PATHEASYRSAVARS
            else
                echo -e "\033[31m Error: not specified email - break! \033[0m"
                exit 1
            fi
        else
            echo -e "\033[31m Error: config template not exist - break! \033[0m"
            exit 1
        fi

        # create PKI
        cd $PATHEASYRSAUSR
        # init PKI
        ./easyrsa init-pki
        # create key Diffi-Hellman
        # ./easyrsa gen-dh

        # add exec mode scripts
        chmod +x ${PATHUSRSCRIPTS}/client_gen_req.sh && chmod +x ${PATHUSRSCRIPTS}/client_gen_ovpn.sh

        echo -e "\033[42m\033[30m +++  Installation completed. Start creating a certificate issue request with the command:  +++ \033[0m"
        echo -e "\033[33m  $ ${PATHUSRSCRIPTS}/client_gen_req.sh YOUR_USER_LOGIN \033[0m"
        echo -e "\033[32m And follow further instructions... \033[0m"
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.



exit 0
