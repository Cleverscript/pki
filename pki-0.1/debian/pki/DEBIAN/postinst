#!/bin/sh
# postinst script for pki
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

PATHEASYRSADEF="/usr/share/easy-rsa"
PATHEASYRSAUSR="/opt/easy-rsa"
PATHEASYRSACA="${PATHEASYRSAUSR}/pki/ca.crt"
PATHEASYRSAVARS="${PATHEASYRSAUSR}/vars"

case "$1" in
    configure)

        # create symlink in user folder
        if [ -d $PATHEASYRSAUSR ]; then
            if [ -d $PATHEASYRSADEF ]; then
                ln -s /usr/share/easy-rsa/* ${PATHEASYRSAUSR}
                read -p "Enter your user login: " LOGIN
                if [ ! -z $LOGIN ]; then
                    chown -R $LOGIN:$LOGIN ${PATHEASYRSAUSR}
                else
                    echo "\033[33m WARNING: user login not specified, failed to change owner and group for ${PATHEASYRSAUSR}, there may be access problems! \033[0m"
                fi
            else
                echo "\033[31m Error: not exist folder ${PATHEASYRSADEF}, break install! \033[0m"
                exit 1
            fi
        else
            echo "\033[31m Error: not exist folder ${PATHEASYRSAUSR}, break install! \033[0m"
            exit 1
        fi

        # create PKI (secret key & CA)
        cd $PATHEASYRSAUSR
        # init PKI
        ./easyrsa init-pki
        # create root certificate
        ./easyrsa build-ca

        if [ -f $PATHEASYRSACA ]; then
            echo "\033[42m\033[30m +++ Success create CA! +++ \033[0m"
            echo "\033[33m "
            cat $PATHEASYRSACA
            cat ${PATHEASYRSAVARS} | grep "# email.)" -A7
            echo " \033[0m"
            echo "\033[42m\033[30m +++++++++++++++++++++++++++++++++++++++++++++ \033[0m"
        else
            echo "\033[41m\033[30m Error: fail create CA! \033[0m"
            exit 1
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.



exit 0
